<%layout('partials/boilerplate')-%>

<div class="products-container swiper">
    <div class="swiper-wrapper" style="width: 100%;height:100%;">
        <% newProductItem.forEach(function(item){ %>
        <div class="card swiper-slide">
            <a href="/product/<%= item._id %>" class="card-link">
                <img class="card-img-top" src=<%= item.image %>>
                <div class="card-body">
                    <h5 class="card-title"> <%= item.title %> </h5>
                    <p class="card-text"><%= item.description %></p>
                </div>
            </a>
            <%if(currentUser){%>
            <form method="POST" action="/product/<%= item._id %>?_method=DELETE">
                <button class="deleteButton">Delete</button>
            </form>
            <%}%>
        </div>
            
        <% }) %>
            <%if(currentUser){%>
            <div class="card swiper-slide">
                <a href="/product/post" class="card-link">
                    <div class="card-body">
                        <h5 class="card-title"> Add new Product </h5>
                    </div>
                </a>
            </div>
            <%}%>
        </div>
        
    </div>